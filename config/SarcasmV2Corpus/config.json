{
    "random_seed": 21016,
    "pytorch_seed": 2335,
    "numpy_seed": 7005,
    "dataset_reader": {
        "type": "stcruz_reader",
        "bert_model_name": "bert-base-uncased",
        "token_indexers": {
            "bert": {
                "type": "bert-pretrained",
                "pretrained_model": "bert-base-uncased"
            }
        }
    },
    "iterator": {
        "type": "bucket",
        "batch_size": 8,
        "sorting_keys": [
            [
                "quote_response",
                "num_tokens"
            ]
        ]
    },
    "model": {
        "type": "bert_classifier",
        "bert_model_name": "bert-base-uncased"
    },
    "train_data_path": "data/sarc2train_exp1emo.csv",
    "validation_data_path": "data/sarc2val_exp1emo.csv",
    "test_data_path": "data/sarc2test_exp1emo.csv",
    "trainer": {
        // "cuda_device": 0,
        "num_epochs": 30,
        "optimizer": {
            "type": "adagrad",
            "lr": 0.0001
        },
        "patience": 3,
        "validation_metric": "+average_F1"
    },
    "evaluate_on_test": true
}